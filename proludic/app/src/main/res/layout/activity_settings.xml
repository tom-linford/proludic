<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryHalf"/>

    <icn.proludic.widgets.CustomTextView
        android:text="@string/change_home_park"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="15dp"
        android:id="@+id/select_home_park_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <icn.proludic.widgets.CustomTrebucheTextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"
            android:text="@string/enable_mobile_data"
            android:layout_height="match_parent" />

        <ToggleButton
            android:id="@+id/enable_3g_4g"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_margin="5dp"
            android:checked="false"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent" />


    </LinearLayout>

    <icn.proludic.widgets.CustomTextView
        android:text="@string/toggle_notifications"
        android:visibility="gone"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <icn.proludic.widgets.CustomTrebucheTextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"
            android:text="@string/general"
            android:layout_height="match_parent" />

        <ToggleButton
            android:id="@+id/general_notifications_toggle"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <icn.proludic.widgets.CustomTrebucheTextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"
            android:text="@string/community"
            android:layout_height="match_parent" />

        <ToggleButton
            android:id="@+id/community_notifications_toggle"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <icn.proludic.widgets.CustomTrebucheTextView
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:gravity="start|center_vertical"
            android:text="@string/personal"
            android:layout_height="match_parent" />

        <ToggleButton
            android:id="@+id/personal_notifications_toggle"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_height="match_parent" />


    </LinearLayout>



</LinearLayout>