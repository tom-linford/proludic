<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    card_view:cardBackgroundColor="@color/colorSecondary"
    card_view:cardUseCompatPadding="false"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    android:layout_margin="5dp">

    <FrameLayout
        android:id="@+id/w_container"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/park_bg"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="1dp">

        <ImageView
            android:id="@+id/select_home_park_image"
            android:layout_width="match_parent"
            android:src="@drawable/park"
            android:layout_height="match_parent" />

        <icn.proludic.widgets.CustomTextView
            android:id="@+id/select_home_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:padding="10dp" />

    </FrameLayout>
</android.support.v7.widget.CardView>