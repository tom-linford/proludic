<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="5dp"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardBackgroundColor="@color/postGrey"
    android:layout_height="75dp"
    android:layout_gravity="center_horizontal"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <ImageView
            android:id="@+id/user_profile_picture"
            android:layout_width="0dp"
            android:scaleType="centerInside"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/thread_title"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Please can someone workout with me today, please please please"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="2dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:text="BradleyIW - " />

                <TextView
                    android:id="@+id/user_time"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24/06/2017 - 10:30" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/comments_image"
                android:src="@drawable/ic_comments"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/posts_total"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="25"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>